<div class="max-w-screen-md mx-auto mt-6">
  <h1 class="text-2xl font-bold mb-4">Ubah Kontak</h1>

  <% if (errors.length > 0) { %>
  <div class="mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
    <ul class="list-disc list-inside text-sm">
      <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
      <% }) %>
    </ul>
  </div>
  <% } %>

  <form
    action="/contact/update"
    method="POST"
    class="bg-white shadow-md rounded p-6 space-y-4"
  >
    <input
      type="hidden"
      name="oldPhoneNumber"
      value="<%= contact.oldPhoneNumber || contact.phoneNumber %>"
    />
    <!-- Input Nama -->
    <div>
      <label for="name" class="block text-sm font-medium text-gray-700"
        >Nama</label
      >
      <input
        type="text"
        id="name"
        name="name"
        value="<%= contact.name %>"
        required
        class="mt-1 block w-full rounded-md border border-gray-300 shadow-sm p-2 focus:ring-blue-500 focus:border-blue-500"
      />
    </div>

    <!-- Input Nomor HP -->
    <div>
      <label for="phoneNumber" class="block text-sm font-medium text-gray-700"
        >Nomor HP</label
      >
      <input
        type="text"
        id="phoneNumber"
        name="phoneNumber"
        value="<%= contact.phoneNumber %>"
        required
        class="mt-1 block w-full rounded-md border border-gray-300 shadow-sm p-2 focus:ring-blue-500 focus:border-blue-500"
      />
      <% if (errors) { %> <% errors.forEach(error => { if (error.param ===
      'phoneNumber') { %>
      <p class="text-red-600 text-sm mt-1"><%= error.msg %></p>
      <% } }) %> <% } %>
    </div>

    <!-- Input Email -->
    <div>
      <label for="email" class="block text-sm font-medium text-gray-700"
        >Email</label
      >
      <input
        type="email"
        id="email"
        name="email"
        value="<%= contact.email %>"
        required
        class="mt-1 block w-full rounded-md border border-gray-300 shadow-sm p-2 focus:ring-blue-500 focus:border-blue-500"
      />
      <% if (errors) { %> <% errors.forEach(error => { if (error.param ===
      'email') { %>
      <p class="text-red-600 text-sm mt-1"><%= error.msg %></p>
      <% } }) %> <% } %>
    </div>

    <!-- Tombol -->
    <div class="flex justify-end space-x-4 pt-4">
      <a
        href="/contact"
        class="inline-block bg-gray-200 text-gray-800 px-4 py-2 rounded hover:bg-gray-300 transition"
      >
        Batal
      </a>
      <button
        type="submit"
        class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition"
      >
        Simpan
      </button>
    </div>
  </form>
</div>
