<% if (!contact) { %>
<div
  class="max-w-screen-md mx-auto mt-6 px-4 p-6 bg-white shadow-md rounded text-center"
>
  <h1 class="text-2xl font-bold mb-4 text-red-600">Kontak Tidak Ditemukan</h1>
  <p class="mb-6 text-gray-700">Maaf, kontak yang Anda cari tidak tersedia.</p>
  <a
    href="/contact"
    class="inline-block bg-gray-600 text-white px-4 py-2 rounded hover:bg-gray-700 transition w-full sm:w-auto"
  >
    Kembali ke Daftar Kontak
  </a>
</div>
<% } else { %>
<div class="max-w-screen-md mx-auto mt-6 px-4 p-6 bg-white shadow-md rounded">
  <h1 class="text-2xl font-bold mb-4">Detail Kontak</h1>

  <div class="mb-4">
    <p class="text-lg font-semibold">Nama:</p>
    <p class="text-gray-700"><%= contact.name %></p>
  </div>

  <div class="mb-4">
    <p class="text-lg font-semibold">Nomor HP:</p>
    <p class="text-gray-700">📞 <%= contact.phoneNumber %></p>
  </div>

  <div class="mb-6">
    <p class="text-lg font-semibold">Email:</p>
    <p class="text-gray-700">✉️ <%= contact.email %></p>
  </div>

  <div class="flex flex-col sm:flex-row gap-2">
    <a
      href="/contact"
      class="bg-gray-600 text-white px-4 py-2 rounded hover:bg-gray-700 transition text-center"
    >
      Kembali ke Daftar Kontak
    </a>

    <a
      href="/contact/edit/<%= contact.phoneNumber %>"
      class="bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600 transition text-center"
    >
      Ubah Kontak
    </a>

    <a
      href="/contact/delete/<%= contact.phoneNumber %>"
      class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700 transition text-center"
      onclick="return confirm('Yakin ingin menghapus kontak ini?');"
    >
      Hapus Kontak
    </a>
  </div>
</div>
<% } %>
